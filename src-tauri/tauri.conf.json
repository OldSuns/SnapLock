{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SnapLock",
  "version": "1.1.2",
  "identifier": "com.oldsun.snaplock",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SnapLock",
        "width": 400,
        "height": 300,
        "minWidth": 300,
        "minHeight": 300,
        "resizable": true,
        "skipTaskbar": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app"],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [
      "libs/ffmpeg"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
