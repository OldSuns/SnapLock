{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SnapLock",
  "version": "0.4.0",
  "identifier": "com.oldsun.snaplock",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SnapLock",
        "width": 400,
        "height": 550,
        "minWidth": 300,
        "minHeight": 300,
        "resizable": true,
        "skipTaskbar": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app"],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
